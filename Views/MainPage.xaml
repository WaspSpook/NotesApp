<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:NotesApp.ViewModels"
             x:Class="NotesApp.Views.MainPage"
             Title="Заметки">


    <Grid RowDefinitions="Auto,*">
        <Label Text="{Binding CurrentDate, StringFormat='{0:dd MMMM yyyy}'}"
               FontSize="Large"
               HorizontalOptions="Center"
               Margin="0,10"/>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding TodayNotes}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItem Text="Удалить"
                                       BackgroundColor="Red"
                                       Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainViewModel}}, Path=DeleteNoteCommand}"
                                       CommandParameter="{Binding .}"/>
                        </SwipeView.RightItems>
                        <Frame Margin="10,5" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding DisplayTitle}"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                                <Label Grid.Column="1"
                                       Text="{Binding Content}"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"
                                       VerticalOptions="Center"
                                       Margin="10,0,0,0"/>
                            </Grid>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.RowSpan="2"
                Text="+"
                FontSize="Large"
                CornerRadius="30"
                WidthRequest="60"
                HeightRequest="60"
                BackgroundColor="Blue"
                TextColor="White"
                Command="{Binding AddNoteCommand}"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"/>
    </Grid>
</ContentPage>